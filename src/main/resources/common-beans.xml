<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="org.example.spring"/>


    <bean id="calculatorBean" class="org.example.spring.springConcept.Calculator" scope="prototype"
    init-method="myInitMethod" destroy-method="myDestroyMethod">
<!--        through setter method-->
        <property name="translatorObj" ref="translatorBean"/>
    </bean>

    <bean id="calculatorBean" class="org.example.spring.springConcept.Calculator" scope="prototype">
<!--        via constructor-->
        <constructor-arg name="translatorObj" ref="translatorBean"/>
    </bean>

    <bean id="translatorBean" class="org.example.spring.springConcept.Translator" scope="singleton"/>


</beans>